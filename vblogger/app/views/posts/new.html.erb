<h1>New Post</h1>

<%= form_for @post do |f| %>
	<p>
		<%= f.label :title, "Title of the post" %>
	</p>
	<p>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :content, "Body of the post"%>
	</p>
	<p>
		<%= f.text_area :content %>
	</p>
	
	<%= f.submit "Add new post" %>
<% end %>