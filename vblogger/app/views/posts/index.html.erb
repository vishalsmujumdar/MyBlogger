<h1>All Posts</h1>

<% @posts.each do |post| %>
	<p>
		<h2>
			<%= link_to post.title, post %>
		</h2>
		<%= post.created_at %>
	</p>
	<p>
		<%= post.content %>
	</p>
	<p>
		<%= link_to "Edit", edit_post_path(post) %> |
		<%= link_to "Delete", post, :confirm => "Are you sure you want to delete this post ?", :method => :delete %>
	</p>
	<hr/>
<% end %>

<%= link_to "Add new post", new_post_path %>